# ====================================
# YouTube Uploader Configuration
# ====================================

# Google OAuth Credentials
YOUTUBE_CLIENT_SECRETS_FILE=client_secrets.json
YOUTUBE_TOKEN_FILE=youtube_token.json

# Upload Settings
VIDEO_SOURCE_DIR=../ig-downloader/downloads
VIDEOS_TO_UPLOAD_PER_RUN=5
DELAY_BETWEEN_UPLOADS=60

# Video Metadata
DEFAULT_VIDEO_TITLE=Reels compilação
DEFAULT_VIDEO_DESCRIPTION=Reels e vídeos compilados do Instagram
DEFAULT_VIDEO_TAGS=reels,instagram,compilação,shorts

# Privacy Settings (PUBLIC, UNLISTED, PRIVATE)
VIDEO_PRIVACY_STATUS=PRIVATE

# Logging
LOG_LEVEL=INFO
LOG_FILE=uploads.log

# Upload Status Tracking
UPLOAD_STATUS_FILE=youtube_uploads.json
